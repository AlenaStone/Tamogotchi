<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="at.fhj.msd.ui.controller.DeathController"
            prefWidth="400" prefHeight="400"
            style="-fx-background-color: transparent;">

<ImageView fx:id="backgroundImage"
           layoutX="0" layoutY="0"
           fitWidth="400" fitHeight="400"
           preserveRatio="true" />

<Label fx:id="deathMessage"
        layoutY="95" layoutX="95"
       prefWidth="180"
       alignment="center"
       style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-color: rgba(87, 46, 81, 0.6); -fx-padding: 5px 10px; -fx-background-radius: 10px;" />


    <ImageView fx:id="petDeathImage"
               layoutX="130" layoutY="160"
               fitWidth="125" fitHeight="125"
               preserveRatio="true" />

<Button fx:id="restartButton"
        layoutX="115" layoutY="180"
        prefWidth="150"
        text="%button.restart"
        style="-fx-background-color: #FF69B4; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20;"
        onMouseEntered="#onHoverButton"
        onMouseExited="#onExitButton"
        onAction="#handleRestart" />

<Button fx:id="exitButton"
        layoutX="115" layoutY="230"
        prefWidth="150"
        text="%button.exit"
        style="-fx-background-color: #C71585; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20;"
        onMouseEntered="#onHoverButton"
        onMouseExited="#onExitButton"
        onAction="#handleExit" />


</AnchorPane>
