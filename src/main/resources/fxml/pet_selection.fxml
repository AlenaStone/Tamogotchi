<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="at.fhj.msd.ui.controller.PetSelectionController"
      alignment="CENTER" spacing="20" prefWidth="400" prefHeight="300">

    <Label text="%label.choosePet" style="-fx-font-size: 18px;"/>
    
    <HBox alignment="CENTER" spacing="30">
        <VBox alignment="CENTER" spacing="5">
            <Button text="%button.cat" onAction="#handleCatSelection" style="-fx-font-size: 16px;"/>
            <ImageView fx:id="catImage" fitWidth="100" fitHeight="100" preserveRatio="true"/>
        </VBox>
        
        <VBox alignment="CENTER" spacing="5">
            <Button text="%button.dog" onAction="#handleDogSelection" style="-fx-font-size: 16px;"/>
            <ImageView fx:id="dogImage" fitWidth="100" fitHeight="100" preserveRatio="true"/>
        </VBox>
        
        <VBox alignment="CENTER" spacing="5">
            <Button text="%button.bird" onAction="#handleBirdSelection" style="-fx-font-size: 16px;"/>
            <ImageView fx:id="birdImage" fitWidth="100" fitHeight="100" preserveRatio="true"/>
        </VBox>
        
        <VBox alignment="CENTER" spacing="5">
            <Button text="%button.fish" onAction="#handleFishSelection" style="-fx-font-size: 16px;"/>
            <ImageView fx:id="fishImage" fitWidth="100" fitHeight="100" preserveRatio="true"/>
        </VBox>
    </HBox>

</VBox>